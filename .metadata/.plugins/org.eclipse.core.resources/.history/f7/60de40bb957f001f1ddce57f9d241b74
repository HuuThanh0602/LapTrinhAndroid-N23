package bai_02;

import java.util.Scanner;

public class GiamDocDieuHanh extends GiamDoc implements ManagerInterface {
    private int soNamKinhNghiem; 

    
    public GiamDocDieuHanh() {
        super("CEO", "", "", null, 0, 0);
        this.soNamKinhNghiem = 0; 
    }

   
    public GiamDocDieuHanh(String tenGiamDoc, String queQuan, Ngay ngayNhanChuc, int tuoi, double luong, int soNamKinhNghiem) {
        super("CEO", tenGiamDoc, queQuan, ngayNhanChuc, tuoi, luong);
        this.soNamKinhNghiem = soNamKinhNghiem; 
    }


    public int layRaSoNamKinhNghiem() {
        return this.soNamKinhNghiem;
    }

  
    public void datSoNamKinhNghiem(int soNamKinhNghiem) {
        this.soNamKinhNghiem = soNamKinhNghiem;
    }

    public String hocVi() {
        return "Giáo sư";
    }

    public String layRaTenGiamDoc() {
        return tenGiamDoc;
    }

   
    public void nhapGiamDocDieuHanh(Scanner sc ) throws InvalidInputException {
    	super.nhapThongTinGiamDoc(sc);
    	
    	while(true) {
    		try {
                System.out.print("Nhập số năm kinh nghiệm: ");
                this.soNamKinhNghiem = sc.nextInt();
                if (this.soNamKinhNghiem < 0) {
                    throw new InvalidInputException("Số năm kinh nghiệm không được âm.");
                }
                break;
    		} catch (InvalidInputException e) {
                throw e;
            }
    		
    	}
    }

   
    public void xuatThongTinGiamDoc() {
        super.xuatThongTinGiamDoc();
        System.out.println("Học vị: " + hocVi());
        System.out.println("Số năm kinh nghiệm: " + this.soNamKinhNghiem + " năm"); 
    }

    @Override
    public double layRaLuongGiamDoc() {
        return this.luong;
    }
}
