package bai_02;

import java.util.Scanner;

public class GiamDocTaiChinh extends GiamDoc implements ManagerInterface {
	
	private double phuCap;
	
	  // Hàm khởi tạo không tham số
    public GiamDocTaiChinh() {
        super("CFO", "","", null, 0,0);
        this.phuCap = 0;
    }

    public GiamDocTaiChinh(String tenGiamDoc, String queQuan, Ngay ngayNhanChuc, int tuoi, double luong, double phuCap) {		
    	super("CFO", tenGiamDoc,queQuan, ngayNhanChuc, tuoi,luong);
		 this.phuCap = phuCap;
	}

    public double layRaPhuCap() {
        return this.phuCap;
    }

    public void datPhuCap(double phuCap) {
        this.phuCap = phuCap;
    }
    
    
	public String hocVi() {
		return "Phó giáo sư, tiến sĩ";
	}

	@Override
	public String layRaTenGiamDoc() {
		return tenGiamDoc;
	}
	
	  // Hàm nhập dữ liệu cho GiamDocTaiChinh

    public void nhapGiamDocTaiChinh(Scanner sc) throws InvalidInputException {
    	
    	super.nhapThongTinGiamDoc(sc);
    	while(true) {
    		 try {
    	            System.out.print("Nhập phụ cấp: ");
    	            this.phuCap = sc.nextDouble();
    	            if (this.phuCap < 0) {
    	                throw new InvalidInputException("Quỹ tài chính không được âm.");
    	            }
    	        } catch (InvalidInputException e) {
    	            System.out.println(e.getMessage());
    	            throw new InvalidInputException("Lỗi nhập dữ liệu. Vui lòng nhập lại.");
    	        } finally {
    	            System.out.println("Quá trình nhập dữ liệu giám đốc tài chính kết thúc.");
    	        }
    	}
       
    }

    // Hàm xuất dữ liệu cho GiamDocTaiChinh
    public void xuatThongTinGiamDoc() {
        super.xuatThongTinGiamDoc();
        System.out.println("Phụ cấp: " + this.phuCap + " $");
        System.out.println("Học vị: " + hocVi());
    }

	@Override
	public double layRaLuongGiamDoc() {
		return this.luong;
	}
	

}
