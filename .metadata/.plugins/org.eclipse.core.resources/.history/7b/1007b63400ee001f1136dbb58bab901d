package QuanLyLopHoc;

import models.ClassRoom;
import models.Student;

import java.time.LocalDate;
import java.util.HashMap;
import java.util.Map;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // Danh sách lớp
        Map<String, ClassRoom> classRooms = new HashMap<>();
        classRooms.put("CNTT1", new ClassRoom("CNTT1"));
        classRooms.put("CNTT2", new ClassRoom("CNTT2"));

        // Thêm sinh viên vào lớp CNTT1
        classRooms.get("CNTT1").addStudent(new Student("An", "Nguyen", LocalDate.of(2002, 5, 10), "Hà Nội", "CNTT1", 9.0, 8.5, 8.0, 7.5, 9.0));
        classRooms.get("CNTT1").addStudent(new Student("Binh", "Tran", LocalDate.of(2002, 7, 20), "TP HCM", "CNTT1", 7.0, 6.5, 8.0, 7.0, 7.5));

        // Thêm sinh viên vào lớp CNTT2
        classRooms.get("CNTT2").addStudent(new Student("Chien", "Le", LocalDate.of(2001, 3, 15), "Đà Nẵng", "CNTT2", 5.0, 4.5, 6.0, 5.5, 6.0));
        classRooms.get("CNTT2").addStudent(new Student("Dung", "Pham", LocalDate.of(2003, 8, 25), "Cần Thơ", "CNTT2", 3.0, 4.0, 3.5, 2.5, 3.0));

        // Hiển thị danh sách lớp
        System.out.println("Danh sách lớp hiện có:");
        for (String classId : classRooms.keySet()) {
            System.out.println("- " + classId);
        }

        // Nhập mã lớp để xem danh sách sinh viên
        Scanner scanner = new Scanner(System.in);
        while (true) {
            System.out.print("\nNhập mã lớp để xem danh sách sinh viên (hoặc nhập 'exit' để thoát): ");
            String input = scanner.nextLine();
            
            if (input.equalsIgnoreCase("exit")) {
                System.out.println("Chương trình kết thúc.");
                break;
            }
            
            ClassRoom selectedClass = classRooms.get(input);
            if (selectedClass != null) {
                selectedClass.printStudentList();
                selectedClass.printRankSummary();
            } else {
                System.out.println("Lớp không tồn tại, vui lòng nhập lại!");
            }
        }

        scanner.close();
    }
}